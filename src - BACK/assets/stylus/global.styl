@import 'reset.styl'
@import './assets/stylus/font.styl'

black = #222
blue = #6D37F4
lilac = #9EAAFF
gradient = linear-gradient(90deg, lilac, blue)
transition = .3s

*
  box-sizing border-box

html
  font-size 18px
  color black
  height 100%

body
  margin 0
  font-family cera
  font-weight 400
  height 100%

input, button
  font-family cera
  font-size 1rem

.body
  display flex
  flex-direction column
  height 100%
  position relative

.mw
  max-width 1170px
  margin-right auto
  margin-left auto
  padding-right 15px
  padding-left 15px

.h2
  font-size 3rem
  text-transform uppercase
  font-weight 600
  margin 0 0 1rem

.button
  width 100%
  margin-top 1rem
  border 0
  line-height 60px
  background blue
  border-radius 5px
  padding 0 5rem
  text-transform uppercase
  color #fff
  cursor pointer
  box-shadow 0px 10px 30px rgba(0, 0, 0, 0.15)
  transition transition
  &:hover
    transform: translateY(2px)
    box-shadow inset 0 -1px 1px rgba(#000, .1), 0px 8px 20px rgba(0, 0, 0, 0.15)
  &:active
    transform translateY(3px)

.input
  position relative
  &+&
    margin-top 1rem
  &__label
    position absolute
    top 50%
    //transform translateY(-50%)
    left 1rem
    transition transition
    cursor text
    transform translateY(-160%)
    opacity .6
    font-size: .8rem
  &__text
    width 100%
    border 0
    background #f5f5f5
    border-radius 5px
    padding 27px 1rem 10px
    color black
    transition transition
    box-shadow:inset 0 0 0 1px #f5f5f5
    &:focus
      box-shadow:inset 0 0 0 1px #e5e5e5
